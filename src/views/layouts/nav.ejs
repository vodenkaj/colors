<head>
<link rel="stylesheet" type="text/css" href="/styles.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;900&display=swap" rel="stylesheet">
<script src="https://use.fontawesome.com/f1d8cb49fe.js"></script>
<script type="text/javascript"  src='/nav_script.js' defer></script>
</head>
<header class='main-header'>
	<a href='/'>Random Colors</a>
	<nav>
		<ul>
			<li><a href='/generator'><i><span>Generate</span></i></a></li>
			<li><a href='/palletes'><i><span>Explore</span></i></a></li>
			<li><i>|</i></li>
			<% if (typeof user != 'undefined') { %>
				<li><a id='user' href='/profile'><i><span><%= user %></span></i></a></li>
			<% } else { %>
				<li><a id='sign-in'><i><span>Sign in</span></i></a></li>
				<li><a id='sign-up'><i><span>Sign up</span></i></a></li>
			<% } %>
		</ul>
	</nav>
</header>
<body>
	<div class='nav-modal-container'>
		<div class='bg-modal'>
			<!-- Sign-up -->
			<div class='registration-form'>
				<button id='close'></button>
				<header class='modal-header'>
					<span>Join Random Colors</span>
					<a>Sign up to collect colors.</a>
				</header>
				<div class='form-container'>
					<form method='POST' action='/signup'>
						<input type="text" name="name" placeholder="Full name" required>
						<input type="email" name="email" placeholder="Email" required>
						<input type="password" name="password" placeholder="Password" required>
						<div>
							<input type="checkbox" name="agree-terms" required>
							<a>I agree to your Terms and Conditions and Privacy Policy</a>
						</div>
						<div>
							<input type="checkbox" name="allow-newsletter">
							<a>I want to subscribe to the newsletter</a>
						</div>
						<input type="submit" value="Create your free account">
					</form>
					<div class='footer'>
						<span>Already registered? <a id='login'>Sign in</a></span>
					</div>
				</div>
			</div>
			<!-- Sign-in -->
			<div class='login-form'>
				<button id='close'></button>
				<header class='modal-header'>
					<span>Hello!</span>
					<a>Sign into your account.</a>
				</header>
				<div class='form-container'>
					<form method='POST' action='/signin'>
						<input type="email" name="email" placeholder="Email" required>
						<input type="password" name="password" placeholder="Password" required>
						<input type="submit" value="Sign in">
					</form>
					<div class='footer'>
						<span>Forgot password? <a id='reset'>Reset</a></span>
						<span>Don't have an account? <a id='register'>Sign up</a></span>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>

